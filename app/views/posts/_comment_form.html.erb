<div class= "comment_border">
<div class= "comment">
<div class = "comment_header">
<p class = "form_header">Post a Comment</p>
</div>
<%= form_for @comment do |f| %>
  <%= f.hidden_field :post_id %>
  <p>
    <div class = "comment_form_contaner">
    <%= f.label :author_name, "Name" %><br/>
    <%= f.text_field :author_name %>
  </p>
  <p>
    <%= f.label :body, "Comment" %><br/>
    <%= f.text_area :body, :class => "comment_form_body" %>
  </p>
  <p>
    <%= f.submit 'Submit' %>
  </p>
<% end %>
</div>  
</div>
</div>